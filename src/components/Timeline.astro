---
export interface Props {
    title: string;
    subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<section
    class="relative container max-w-screen-xl md:mx-auto mb-section px-4 lg:px-0"
>
    <header class="flex flex-col items-center">
        <div>
            <h2 class="mb-subheading">{title}</h2>
            <h4 class="mb-heading text-primary-200">{subtitle}</h4>
        </div>
    </header>
    <div class="flex flex-col md:grid grid-cols-9 mx-auto p-2 text-light-100">
        <slot />
    </div>
</section>

---
export interface Props {
    title: string;
    subtitle?: string;
    decoration?: boolean;
}

const { title, subtitle = "", decoration = false } = Astro.props;
---

<!-- Section that displays a number of topics -->
<section class="container max-w-screen-xl md:mx-auto mb-section px-4 lg:px-0">
    <div class="p-4 flex flex-col items-start">
        <div>
            <h4 class="mb-subheading uppercase text-primary-200">
                {subtitle}
            </h4>
            <h2 class="relative w-fit mb-heading">{title}</h2>
        </div>
    </div>
    <div class="flex flex-col md:flex-row md:flex-wrap justify-center gap-4">
        <slot />
    </div>
</section>
